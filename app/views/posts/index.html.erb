<%= render 'posts/new' %>
<div id="status_feed">
  <% @posts.each do |p| %>
    <div id="each_post">
      <div>
        <%= image_tag(@user.profile_picture.variant(resize: "40x40"), id: "profile_pic_photo") %>
        <p><b><%= p.user.full_name %></b> said on <%= p.created_at.strftime("%B %wth, %l:%M:%S %p") %></p>
      </div>
      <p id="post_content"><%= p.content %></p>
    </div>
    <% end %>
</div>
